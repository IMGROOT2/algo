extends includes/layout.pug
block vars
    - var title = "Problem";
    - var description = "View a problem.";
block styles
    link(rel="stylesheet" href="css/problem.scss")

block content
    prepend navbar
    .box.is-fullheight-with-navbar.column.m-4
        div.has-text-centered.mb-3
            h1.title.has-text-white.is-2#problem-title
            h2.subtitle.has-text-white.is-4.mb-0#problem-subtitle
            .level(style="justify-content: center;")
                .level-left.mx-1
                    .level-item
                        span#problem-id.has-text-white.is-6.tag.is-hidden
                .level-right(style="margin-top: 0 !important;").mx-1
                    .level-item
                        a#problem-link(href="#" style="color: white;").page-link.is-hidden View on usaco.org
        div#problem-text.has-text-white

append scripts-footer
    script(type="module" src="js/problem.js")
